<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerLayout">
        <attr name="selectedIndicatorColor" format="color|reference"></attr>
        <attr name="unSelectedIndicatorColor" format="color|reference"></attr>

        <attr name="selectedIndicatorHeight" format="dimension|reference"></attr>
        <attr name="unSelectedIndicatorHeight" format="dimension|reference"></attr>

        <attr name="selectedIndicatorWidth" format="dimension|reference"></attr>
        <attr name="unSelectedIndicatorWidth" format="dimension|reference"></attr>

        <attr name="indicatorShape" format="enum">
            <enum name="rect" value="0"></enum>
            <enum name="oval" value="1"></enum>
        </attr>

        <attr name="indicatorPosition" format="enum">
            <enum name="centerBottom" value="0"></enum>
            <enum name="leftBottom" value="1"></enum>
            <enum name="rightBottom" value="2"></enum>
            <enum name="centerTop" value="3"></enum>
            <enum name="rightTop" value="4"></enum>
            <enum name="leftTop" value="5"></enum>
        </attr>

        <attr name="indicatorSpace" format="dimension|reference"></attr>
        <attr name="indicatorMargin" format="dimension|reference"></attr>

        <attr name="autoPlayDuration" format="integer|reference"></attr>
        <attr name="scrollDuration" format="integer|reference"></attr>
        <attr name="isAutoPlay" format="boolean|reference"></attr>


    </declare-styleable>
</resources>